{
  "name": "component-system-prototype",
  "version": "0.0.0",
  "description": "Preact-like component system built on DOM templating API",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "wireit",
    "build:browser-tests": "wireit",
    "test:browser": "wireit",
    "test": "wireit"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.0",
    "chai": "^5.2.0",
    "prettier": "^3.5.3",
    "ts-patch": "^3.2.1",
    "typescript": "^5.8.3",
    "wireit": "^0.14.12"
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "files": [
        "src/**/*.ts"
      ],
      "outputs": [
        "/*.{js,d.ts,js.map,d.ts.map}"
      ]
    },
    "build:browser-tests": {
      "command": "tspc -p browser-tests/tsconfig.json",
      "dependencies": [
        "build",
        "../dom-templating-prototype:build",
        "../dom-template-tsx:build"
      ],
      "files": [
        "browser-tests/**/*.tsx",
        "browser-tests/**/*.ts",
        "browser-tests/tsconfig.json"
      ],
      "outputs": [
        "browser-tests-out/**"
      ]
    },
    "test:browser": {
      "command": "wtr browser-tests-out/**/*_test.js --config browser-tests-out/web-test-runner.config.mjs",
      "dependencies": [
        "build:browser-tests"
      ],
      "files": [],
      "outputs": []
    },
    "test": {
      "dependencies": [
        "test:browser"
      ]
    }
  }
}
